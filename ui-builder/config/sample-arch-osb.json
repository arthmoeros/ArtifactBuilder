{
    "uiConfig": {
        "metadata": {
            "generatorKey": "SampleXMLArchOSB",
            "generatorComponent": "sample-arch-osb-gen",
            "title": "OSB Services Generation Sample",
            "description": "This sample configuration helps as a basis for understanding Artifacter's XML parsing to Angular Templates"
        },
        "form": [
            {
                "formId": "sampleFormOne",
                "formTitle": "Sample Form 1",
                "formDescription": "This sample form generates a JDeveloper Project for a OSB proxy service, using the data provided by the user and the configured templates",
                "formFunction": "generateSampleArchOSB1",
                "formElements": {
                    "inputGroup": [
                        {
                            "groupTitle": "General Information",
                            "inputs": [
                                {
                                    "checkbox": {
                                        "label": "Additional Folders",
                                        "valueKey": "additionalFolders",
                                        "defaultValue": "1",
                                        "helptext": "Indicates whether or not to generate additional empty folders"
                                    }
                                },
                                {
                                    "text": {
                                        "label": "Business Domain",
                                        "valueKey": "bizDomain",
                                        "defaultValue": "General",
                                        "helptext": "Service's business domain, default is \"General\"",
                                        "required": ""
                                    }
                                },
                                {
                                    "text": {
                                        "label": "Business Entity",
                                        "valueKey": "bizEntity",
                                        "helptext": "Business Entity which the service makes use of",
                                        "required": "",
                                        "postSubmit": [
                                            {
                                                "stringOperation": "allLowerCase"
                                            },
                                            {
                                                "stringOperation": "blanksToCamelCase"
                                            },
                                            {
                                                "stringOperation": "startWithUpperCase"
                                            }
                                        ],
                                        "placeholder": "Put a Biz here"
                                    }
                                },
                                {
                                    "number": {
                                        "label": "Service ID",
                                        "valueKey": "serviceId",
                                        "helptext": "Identification number for the service",
                                        "required": ""
                                    }
                                }
                            ]
                        },
                        {
                            "groupTitle": "Specific Information",
                            "inputs": [
                                {
                                    "text": {
                                        "label": "Service Name",
                                        "valueKey": "serviceName",
                                        "helptext": "Service descriptive name, should indicate a verbal operation (IE: GetCustomerInfo)",
                                        "required": "",
                                        "postSubmit": [
                                            {
                                                "stringOperation": "allLowerCase"
                                            },
                                            {
                                                "stringOperation": "blanksToCamelCase"
                                            },
                                            {
                                                "stringOperation": "startWithUpperCase"
                                            }
                                        ]
                                    }
                                },
                                {
                                    "text": {
                                        "label": "Service Version",
                                        "valueKey": "serviceVersion",
                                        "helptext": "Version number for the service, should follow the pattern: V[Major].[Minor] (IE: V1.0)",
                                        "required": "",
                                        "postSubmit": [
                                            {
                                                "stringOperation": "allLowerCase"
                                            }
                                        ]
                                    }
                                },
                                {
                                    "choice": {
                                        "label": "Service Type",
                                        "valueKey": "serviceType",
                                        "helptext": "Indicates Service Type",
                                        "options": [
                                            "ABC",
                                            "XYZ"
                                        ]
                                    }
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "generationRequestFileForm": {}
            }
        ]
    }
}